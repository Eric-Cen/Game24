<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_answer2"
            android:text="Answer"
            android:rotation="180"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pass2"
            android:text="@string/pass_status"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            app:layout_constraintStart_toEndOf="@+id/btn_answer2"
            app:layout_constraintBottom_toBottomOf="@+id/btn_answer2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player2_cards"
            android:text="Cards in hand: 26"
            android:rotation="180"
            app:layout_constraintEnd_toEndOf="@+id/btn_pass2"
            app:layout_constraintTop_toBottomOf="@+id/btn_pass2"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/tv_player_two"
            android:rotation="180"
            app:layout_constraintEnd_toEndOf="@+id/tv_player2_cards"
            app:layout_constraintTop_toBottomOf="@+id/tv_player2_cards"/>
    <com.mcarving.game24.cards.CardView
            android:id="@+id/view1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="16dp"

    />
    <com.mcarving.game24.cards.CardView
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="16dp"

    />
    <com.mcarving.game24.cards.CardView
            android:id="@+id/view3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintEnd_toStartOf="@+id/view4"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="16dp"
    />
    <com.mcarving.game24.cards.CardView
            android:id="@+id/view4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/tv_player_one"
            app:layout_constraintStart_toStartOf="@+id/tv_player1_cards"
            app:layout_constraintBottom_toTopOf="@+id/tv_player1_cards"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player1_cards"
            android:text="Cards in hand: 26"
            app:layout_constraintStart_toStartOf="@+id/btn_pass1"
            app:layout_constraintBottom_toTopOf="@+id/btn_pass1"
            android:layout_marginStart="12dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pass1"
            android:text="@string/pass_status"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_answer1"
            app:layout_constraintTop_toTopOf="@+id/btn_answer1"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_answer1"
            android:text="Answer"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>